<div class="navbar navbar-expand-sm navbar-light navbar-lbn sticky-top">
  <%= link_to root_path, class: "navbar-brand font-weight-bold" do %>
    <%= image_tag "logo_lbn_1.png"%>
    <%= "La Bonne Nouvelle" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <li class="nav-item dropdown">
          <a class="nav-link1 dropdown-toggle mr-2 btn-lbn-home" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Votre Espace</a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.projects.any? %>
              <%= link_to "Projet en cours", project_path(current_user.projects.last), class: "dropdown-item" %>
            <% end %>
            <%= link_to "Gérer mes projets", projects_path(anchor: "Projets"), class: "dropdown-item" %>
            <%= link_to "Nouveau projet", projects_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item-lbn">
          <li class="nav-item-lbn mr-3">
            <%= link_to "A propos", "#anchor-features", class: "nav-link" %>
          </li>
          <li class="nav-item-lbn mr-3">
            <%= link_to "Etapes", "#anchor-etapes", class: "nav-link" %>
          </li>

            <%= link_to "S'inscrire", new_user_session_path, class: "btn-lbn-p " %>
            <%= link_to "Se connecter", new_user_session_path, class: "btn-lbn-pl " %>

        </li>
      <% end %>
    </ul>
  </div>
</div>

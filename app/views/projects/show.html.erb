
  <div class="titles-show">
      <h1 class="title-show">Votre Projet</h1>
      <h2 class="subtitle-show"><%= @project.title %></h2>
  </div>

                              <%# PROGRESSION %>

  <div class="background-progression">
    <div class="progression-show">

      <div class="stepper-wrapper-show">

        <% @steps.each do |step| %>
          <div class="stepper-item-show <%= step.number < @ongoing_step.number ? "completed" : "Not-completed" %>">
          <div class="step-counter-show"><%= step.number %></div>
          <div class="step-content-show"><%= step.title %></div>
        </div>
        <% end %>

      </div>

      <div class="div-button-acceder-chatbot-show">
        <%= link_to chatbot_project_path, class: "button-acceder-chatbot-show" do %>Accéder à votre chatbot<% end %>
      </div>

    </div>

  </div>


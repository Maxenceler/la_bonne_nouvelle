      <div class="card-recapitulatif-show">
        <p class="title-card-recapitulatif-show">Nombre de pièces</p>
        <hr class="hr-recapitulatif-show">
        <p class="content-card-recapitulatif-show"><%= @project.rooms_number %></p>
      </div>

      <div class="card-recapitulatif-show">
        <p class="title-card-recapitulatif-show">Nombre de chambres & SDB</p>
        <hr class="hr-recapitulatif-show">
        <p class="content-card-recapitulatif-show"><%= @project.bedrooms_number%> chambres / <%= @project.bathrooms_number %> SDB</p>
      </div>

    </div>

  </div>


<div class="container">
  <%= simple_form_for(@project) do |f| %>
      <%= f.input :title, label: false, placeholder: "Titre" %>
      <%= f.input :address, label: false, placeholder: "Adresse" %>
      <%= f.input :project_type, label: false, default: "Type", collection: ["Appartement", "Maison"] %>
      <%= f.input :building_date, label: "Date de construction", placeholder: "Date de construction" %>
      <div class="align-form-by-two-index">
      <%= f.input :living_area, label: false, placeholder: "Surface habitable" %>
      <%= f.input :non_living_area, label: false, placeholder: "Surface non habitable" %>
      <%= f.input :buildable, label: false, placeholder: "Terrain constructible ?" %>
      <%= f.input :rooms_number, label: false, placeholder: "Nombre de pièces (hors chambres, cuisines et SDB)" %>
      <%= f.input :bedrooms_number, label: false, placeholder: "Nombre de chambres" %>
      <%= f.input :bathrooms_number, label: false, placeholder: "Nombre de salles de bain" %>
      <%= f.input :garden_size, label: false, placeholder: "Surface du jardin" %>
      <%= f.input :main_photo, as: :file %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    </div>
    <%= f.button :submit, "Créer votre annonce", class: "w-100 blue-button-form" %>
  <% end %>
</div>

      <%= f.input :non_living_area, label: false, placeholder: "Surface non habitable" %>
      <%= f.input :bedrooms_number, label: false, placeholder: "Nombre de chambres" %>
      <%= f.input :bathrooms_number, label: false, placeholder: "Nombre de salles de bain" %>
      <%= f.input :garden_size, label: false, placeholder: "Surface du jardin" %>
        <%= f.input :main_photo, as: :file %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    </div>
